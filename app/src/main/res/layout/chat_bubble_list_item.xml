<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/complex_list_item"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_rum_user_profilepic_imageview"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"

        />

    <LinearLayout
        android:id="@+id/chat_bubble_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/chat_bubble_background"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/chat_rum_user_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="1dp"

                android:layout_toRightOf="@id/chat_rum_user_profilepic_imageview"
                android:textColor="@color/medium_gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_timestamp_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="1dp"

                android:layout_toRightOf="@id/chat_rum_user_profilepic_imageview"
                android:textColor="@color/medium_light_gray"

                android:textSize="10sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/chat_message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="0dp"


            >

        </TextView>
    </LinearLayout>

</LinearLayout>